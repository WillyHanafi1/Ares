---
const navLinks = [
    { name: "Beranda", href: "#" },
    { name: "Layanan", href: "#layanan" },
    { name: "Harga", href: "#pricing" },
    { name: "Proses", href: "#proses" },
    { name: "Kontak", href: "#kontak" },
];
---

<nav class="sticky top-0 z-50 w-full glass-nav">
    <div
        class="mx-auto flex h-20 max-w-7xl items-center justify-between px-6 lg:px-8"
    >
        <!-- Logo -->
        <a href="/" class="flex items-center gap-3">
            <div
                class="flex size-8 items-center justify-center rounded-lg bg-gradient-to-br from-primary to-secondary text-white shadow-lg"
            >
                <span class="material-symbols-outlined" style="font-size: 20px;"
                    >smart_toy</span
                >
            </div>
            <h2
                class="text-xl font-bold tracking-tight text-gray-900 dark:text-white"
            >
                Seriaflow
            </h2>
        </a>

        <!-- Desktop Nav Links -->
        <div class="hidden items-center gap-8 md:flex">
            {
                navLinks.map((link) => (
                    <a
                        href={link.href}
                        class="text-sm font-medium text-gray-600 transition-colors hover:text-gray-900 dark:text-gray-300 dark:hover:text-white"
                    >
                        {link.name}
                    </a>
                ))
            }
        </div>

        <!-- CTA Button & Theme Toggle -->
        <div class="flex items-center gap-3">
            <!-- Theme Toggle Button -->
            <button
                id="theme-toggle"
                class="flex h-10 w-10 items-center justify-center rounded-lg text-gray-600 transition-all hover:bg-gray-100 dark:text-gray-300 dark:hover:bg-white/10"
                aria-label="Toggle theme"
            >
                <!-- Sun icon (shown in dark mode, click to switch to light) -->
                <span
                    class="material-symbols-outlined hidden dark:block"
                    style="font-size: 22px;">light_mode</span
                >
                <!-- Moon icon (shown in light mode, click to switch to dark) -->
                <span
                    class="material-symbols-outlined block dark:hidden"
                    style="font-size: 22px;">dark_mode</span
                >
            </button>

            <a
                href="#kontak"
                class="group relative flex h-10 items-center justify-center overflow-hidden rounded-lg bg-primary px-6 text-sm font-bold text-white transition-all hover:bg-primary/90 neon-glow-hover"
            >
                <span class="relative z-10">Konsultasi</span>
                <div
                    class="absolute inset-0 bg-gradient-to-r from-transparent via-white/10 to-transparent opacity-0 transition-opacity duration-300 group-hover:opacity-100"
                >
                </div>
            </a>

            <!-- Mobile Menu Button -->
            <button
                id="mobile-menu-btn"
                class="md:hidden p-2 text-gray-600 hover:text-gray-900 dark:text-gray-300 dark:hover:text-white"
                aria-label="Toggle menu"
            >
                <span class="material-symbols-outlined">menu</span>
            </button>
        </div>
    </div>

    <!-- Mobile Menu -->
    <div
        id="mobile-menu"
        class="hidden md:hidden px-6 pb-4 glass-panel mx-4 rounded-xl mt-2"
    >
        {
            navLinks.map((link) => (
                <a
                    href={link.href}
                    class="block py-3 text-sm font-medium text-gray-600 hover:text-gray-900 dark:text-gray-300 dark:hover:text-white border-b border-gray-200 dark:border-white/5 last:border-0"
                >
                    {link.name}
                </a>
            ))
        }
        <a
            href="#kontak"
            class="block mt-3 py-3 text-center text-sm font-bold text-white bg-primary rounded-lg"
        >
            Konsultasi Gratis
        </a>
    </div>
</nav>

<!-- External Navbar Script -->
<script src="/scripts/navbar.js" defer></script>
<script src="/scripts/theme-toggle.js" defer></script>
