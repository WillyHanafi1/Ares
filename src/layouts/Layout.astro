---
import ScrollAnimations from "../components/ScrollAnimations.astro";
import "../styles/global.css";

export interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Seriaflow - AI Automation Agency",
  description = "Hemat waktu dan biaya operasional bisnis Anda dengan AI automation dari Seriaflow.",
} = Astro.props;
---

<!doctype html>
<html lang="id" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>

    <!-- Favicon - Optimized for all browsers and Google Search -->
    <link rel="icon" type="image/png" sizes="48x48" href="/favicon-48x48.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="theme-color" content="#1313EC" />

    <!-- Open Graph / Social Media -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://seriaflow.com/logo.png" />
    <meta property="og:url" content="https://seriaflow.com" />
    <meta property="og:site_name" content="Seriaflow" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://seriaflow.com/logo.png" />

    <!-- Structured Data for Google Search (Organization with Logo) -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "Seriaflow",
        "url": "https://seriaflow.com",
        "logo": "https://seriaflow.com/logo.png",
        "description": "AI Automation Agency Indonesia - Hemat waktu dan biaya operasional bisnis Anda dengan AI automation.",
        "contactPoint": {
          "@type": "ContactPoint",
          "telephone": "+62-851-1762-3819",
          "contactType": "sales",
          "areaServed": "ID",
          "availableLanguage": ["Indonesian", "English"]
        },
        "sameAs": []
      }
    </script>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap"
      rel="stylesheet"
    />

    <!-- Material Symbols -->
    <link
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="overflow-x-hidden antialiased">
    <!-- Background Effects -->
    <div class="bg-animated-gradient"></div>
    <div class="bg-grid-pattern"></div>
    <div class="bg-noise"></div>

    <!-- Floating Orbs for extra visual interest -->
    <div
      class="fixed top-20 -left-32 w-96 h-96 rounded-full bg-primary/10 blur-[150px] animate-float-orb pointer-events-none"
    >
    </div>
    <div
      class="fixed bottom-20 -right-32 w-96 h-96 rounded-full bg-secondary/10 blur-[150px] animate-float-orb pointer-events-none"
      style="animation-delay: -10s;"
    >
    </div>
    <div
      class="fixed top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] rounded-full bg-primary/5 blur-[200px] animate-glow-pulse pointer-events-none"
    >
    </div>

    <!-- Content -->
    <slot />

    <!-- Scroll Animations -->
    <ScrollAnimations />
  </body>
</html>
